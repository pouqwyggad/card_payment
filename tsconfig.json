{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@page/*": ["./components/pages/*"],
      "@icons/*": ["./components/icons/*"],
      "@ui/*": ["./components/ui/*"],
      "@constants/*": ["./constants/*"],
      "@types/*": ["./types/*"],
      "@utils/*": ["./utils/*"],
      "@store/*": ["./store/*"],
      "@motions/*": ["./motions/*"],
      "@css/*": ["./css/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
